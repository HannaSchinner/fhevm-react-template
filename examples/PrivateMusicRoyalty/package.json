{
  "name": "private-music-royalty",
  "version": "1.0.0",
  "description": "Privacy-preserving music royalty distribution system using Zama FHE - React version with FHEVM SDK",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:zama": "hardhat run scripts/deploy.js --network zamaTestnet",
    "test": "hardhat test",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "verify": "hardhat verify",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solidity",
    "music",
    "royalty",
    "privacy",
    "fhe",
    "zama",
    "smart-contracts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fhevm/sdk": "workspace:*",
    "@fhevm/solidity": "^0.7.0",
    "@zama-fhe/oracle-solidity": "^0.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ethers": "^6.14.0",
    "fhevmjs": "^0.5.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@fhevm/hardhat-plugin": "0.0.1-3",
    "@fhevm/mock-utils": "^0.0.1-3",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@zama-fhe/relayer-sdk": "^0.1.2",
    "hardhat": "^2.19.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
